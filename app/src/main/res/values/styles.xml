<resources>

    <attr format="reference" name="bibleTextColor"/>



    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="bibleTextColor">@color/bibleTextColorLight</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--actionMenuTextColor更改actionMenu的字体颜色，
        actionMenuTextAppearance 只能改acctionMenu上字体的大小，不能更改颜色，
        而在toolbar的menu样式中应该可以都改。-->

        <!--<item name="popupMenuStyle">@style/popupMenuStyle</item>-->
    </style>


    <style name="list_item_appearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationTheme">
        <!--<item name="android:textColorPrimary">@color/gray</item>-->
        <!--<item name="android:textColorSecondary">@color/gray</item>-->
        <!--<item name="colorPrimary">?attr/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">?attr/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">?attr/colorAccent</item>-->
        <!--<item name="android:windowBackground">?attr/android:windowBackground</item>-->
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MyTextAppearance">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textColor">@color/white</item>-->
    </style>
    <!-- ToolBar -->

    <!-- 右上角弹出的菜单设置 -->
    <style name="popupTheme">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/baixing</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="RedTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>

    </style>

    <style name="GreenTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="BlueTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PinkTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="BiluTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/bilu</item>
        <item name="colorPrimaryDark">@color/bilu</item>
        <item name="colorAccent">@color/bilu</item>
    </style>

    <!--<style name="BlackTheme" parent="AppBaseTheme">-->
        <!--<item name="colorPrimary">@color/night</item>-->
        <!--<item name="colorPrimaryDark">@color/black</item>-->
        <!--<item name="colorAccent">@color/black</item>-->
        <!--<item name="android:windowBackground">@color/black</item>-->
    <!--</style>-->

    <style name="BlueGreyTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/BlueGrey900</item>
        <item name="colorPrimaryDark">@color/BlueGrey900</item>
        <item name="colorAccent">@color/BlueGrey900</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="colorPrimary">@color/window_background_dark</item>
        <item name="colorPrimaryDark">@color/window_background_dark</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/window_background_black</item>
        <item name="bibleTextColor">@color/bibleTextColorDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme" parent="BlackTheme">
        <!-- Customize your theme here. -->
    </style>
</resources>
